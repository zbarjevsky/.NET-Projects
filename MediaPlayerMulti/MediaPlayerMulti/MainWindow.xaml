<Window x:Class="MediaPlayerMulti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayerMulti" 
        xmlns:mediaplayer="clr-namespace:MkZ.MediaPlayer" xmlns:controls="clr-namespace:MkZ.MediaPlayer.Controls"
        mc:Ignorable="d" 
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        WindowStartupLocation="CenterScreen"
        Title="MkZ Media Player" Height="768" Width="1366">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="rowHeader" Height="40"></RowDefinition>
            <RowDefinition x:Name="rowContent" Height="*"></RowDefinition>
            <RowDefinition x:Name="rowFooter" Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Background="LightGray">
            <controls:SmallButtonAdd Margin="4" Command="ApplicationCommands.Open" />
            <controls:ButtonPlay Margin="4" Command="MediaCommands.TogglePlayPause" />
            <ComboBox x:Name="_cmbFilesList" IsEditable="False">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}--{1}">
                                        <Binding Path="FileName" />
                                        <Binding Path="MediaState" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            
                            <controls:SmallButtonClose Margin="4,0,0,0" VerticalAlignment="Top"
                                    Click="RemoveMediaFile_Click" />

                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </DockPanel>
        <mediaplayer:VideoPlayerControl Grid.Row="1" x:Name="_player" MediaFileInfo="{Binding SelectedItem, ElementName=_cmbFilesList}" />
    </Grid>
</Window>
