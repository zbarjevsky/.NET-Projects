<UserControl x:Class="MkZ.MediaPlayer.Controls.CursorArrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MkZ.WPF.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
        <Canvas Name="ContentPanel" IsHitTestVisible="False" Background="Transparent" >
            <Viewbox x:Name="_cursor" Height="50" Width="50">
            <Path Stroke="Yellow" StrokeThickness="2" 
                          Margin="-1,2,0,0"
                          Data="M 0 14 L -2 0 L 10 7 L 7 10 L 15 20.4 L 12 22.6 L 4 12 Z" >
                <Path.Effect>
                    <DropShadowEffect />
                </Path.Effect>
            </Path>
        </Viewbox>
        </Canvas>
</UserControl>
