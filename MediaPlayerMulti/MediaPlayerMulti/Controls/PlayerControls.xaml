<UserControl x:Class="MkZ.MediaPlayer.Controls.PlayerControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MkZ.MediaPlayer.Controls"
             mc:Ignorable="d" Background="Black"
             d:DesignHeight="60" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary Source="SliderControlResource.xaml" />
    </UserControl.Resources>
    <DockPanel Grid.Row="1" Margin="0,6" VerticalAlignment="Top" HorizontalAlignment="Stretch" >
        <local:ButtonPlay Width="30" Margin="6,0" Foreground="Red" />
        <local:ButtonPause Width="30" Margin="6,0" Foreground="White" />
        <local:ButtonStop Width="30" Margin="6,0" Foreground="LimeGreen" />
        <local:ButtonVolume DockPanel.Dock="Right" Width="30" Margin="6,0" Foreground="LightBlue" />
        <Slider Style="{StaticResource Horizontal_Slider}" DockPanel.Dock="Top"
            VerticalAlignment="Center" HorizontalAlignment="Stretch" 
            TickFrequency="30" LargeChange="100" SmallChange="10"
            Minimum="0" Maximum="600" Value="400" Margin="5,0"></Slider>
    </DockPanel>
</UserControl>
