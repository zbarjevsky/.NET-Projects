<UserControl x:Class="MultiPlayer.VideoCommandsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiPlayer"
             SizeChanged="UserControl_SizeChanged"
             IsVisibleChanged="UserControl_IsVisibleChanged"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <UserControl.Resources>
    </UserControl.Resources>
    <ScrollViewer x:Name="_scroll" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="255,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left"
                        Visibility="{Binding IsChecked, ElementName=btnMoreBookmarks, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel.Background>
                    <SolidColorBrush Color="SlateGray" Opacity="0.8" />
                </StackPanel.Background>
                <local:BookmarkButtonControl Margin="2" Text="1" ActiveBrush="{Binding BookmarkBrush1, Source={StaticResource BookmarkColors}}"
                                             Position="{Binding Settings.ReplayPosC}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="C" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="2" ActiveBrush="{Binding BookmarkBrush2, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosD}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="D" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="3" ActiveBrush="{Binding BookmarkBrush3, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosE}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="E" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="4" ActiveBrush="{Binding BookmarkBrush4, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosF}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="F" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="5" ActiveBrush="{Binding BookmarkBrush5, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosG}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="G" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="6" ActiveBrush="{Binding BookmarkBrush6, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosH}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="H" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="7" ActiveBrush="{Binding BookmarkBrush7, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosI}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="I" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="8" ActiveBrush="{Binding BookmarkBrush8, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosJ}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="J" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                <local:BookmarkButtonControl Margin="2" Text="9" ActiveBrush="{Binding BookmarkBrush9, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosK}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="K" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
            </StackPanel>
            <WrapPanel Grid.Row="1" x:Name="_wrapPanel" Orientation="Horizontal" HorizontalAlignment="Stretch" >
                <WrapPanel.Background>
                    <SolidColorBrush Color="SlateGray" Opacity="0.8" />
                </WrapPanel.Background>
                <StackPanel x:Name="_stackButtons" Orientation="Horizontal">
                    <Button Margin="2" x:Name="_btnPlayPause" Command="{Binding TogglePlayPauseCommand}" >
                        <StackPanel Orientation="Horizontal">
                            <Label FontFamily="Segoe MDL2 Assets" Content="{Binding PlayPauseIconText, FallbackValue='&#xE715;'}" FontSize="16" />
                            <!--<Label FontFamily="Segoe MDL2 Assets" Content="&#xE769;" FontSize="16" />-->
                        </StackPanel>
                    </Button>
                    <Button ToolTip="Previous File" Margin="2" Command="{Binding PrevFileCommand}" >
                        <Label FontFamily="Segoe MDL2 Assets" Content="&#xE892;" FontSize="16" />
                    </Button>
                    <Button ToolTip="Next File" Margin="2" Command="{Binding NextFileCommand}" >
                        <Label FontFamily="Segoe MDL2 Assets" Content="&#xE893;" FontSize="16" />
                    </Button>
                    <ComboBox x:Name="_speed" Margin="2,2" Padding="8" SelectedIndex="4" SelectionChanged="Speed_Selected" >
                        <ComboBoxItem Content="Min"/>
                        <ComboBoxItem Content="0.1x" />
                        <ComboBoxItem Content="0.2x" />
                        <ComboBoxItem Content="0.5x" />
                        <ComboBoxItem Content="1.0x" FontWeight="Bold" />
                        <ComboBoxItem Content="1.5x" />
                    </ComboBox>
                    <ComboBox x:Name="_fit" Margin="2,2" Padding="8" SelectedIndex="2" SelectionChanged="Fit_Selected" >
                        <ComboBoxItem Content="Custom" />
                        <ComboBoxItem Content="Original" />
                        <ComboBoxItem Content="FitWidth" />
                        <ComboBoxItem Content="FitWindow" />
                        <ComboBoxItem Content="FitHeight" />
                    </ComboBox>
                   <local:BookmarkButtonControl Margin="2" Text="1" ActiveBrush="{Binding BookmarkBrush1, Source={StaticResource BookmarkColors}}"
                                             Position="{Binding Settings.ReplayPosC}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="C" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                    <local:BookmarkButtonControl Margin="2" Text="2" ActiveBrush="{Binding BookmarkBrush2, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosD}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="D" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                    <ToggleButton x:Name="btnMoreBookmarks" Margin="2" IsChecked="{Binding Settings.IsMoreBookmarksOpen, Mode=TwoWay, FallbackValue=true}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE97B;"/>
                    </ToggleButton>
                    <ToggleButton ToolTip="{Binding Replay.ReplayToolTip, FallbackValue='Replay Last N seconds'}" Margin="2" Padding="2" 
                                  Click="ReplayToggle_Click" 
                                  IsChecked="{Binding Replay.IsReplayChecked, Mode=TwoWay}">
                        <Label x:Name="_lblReplay" FontFamily="Segoe MDL2 Assets" Content="&#xE8EE;" FontSize="16" />
                    </ToggleButton>
                    <local:BookmarkButtonControl Margin="2" Text="A" ActiveBrush="{Binding BookmarkBrushA, Source={StaticResource BookmarkColors}}"
                                             Position="{Binding Settings.ReplayPosA}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="A" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                    <local:BookmarkButtonControl Margin="2" Text="B" ActiveBrush="{Binding BookmarkBrushA, Source={StaticResource BookmarkColors}}" 
                                             Position="{Binding Settings.ReplayPosB}" ClearCommand="{Binding BookmarkClearCommand}"
                                             CommandParameter="B" GotoCommand="{Binding BookmarkGoToCommand}" SetCommand="{Binding BookmarkSetCommand}" />
                   <RepeatButton ToolTip="Back 0.1 sec" Margin="2" Padding="2" Click="PrevFrame_Click">
                        <Label FontFamily="Segoe MDL2 Assets" Content="&#xE8A0;" FontSize="16" />
                    </RepeatButton>
                    <RepeatButton ToolTip="Next Frame" Margin="2" Click="NextFrame_Click" >
                        <Label FontFamily="Segoe MDL2 Assets" Content="&#xE89F;" FontSize="16" />
                    </RepeatButton>
                </StackPanel>
                <DockPanel LastChildFill="True" Height="36" >
                    <TextBlock x:Name="_timeLbl" Margin="2,1" Text="0:00" FontWeight="Bold" MinWidth="44" 
                               VerticalAlignment="Center"
                               TextAlignment="Right" Foreground="White" />
                    <DockPanel x:Name="_docSliders" LastChildFill="True" MinWidth="200" >
                        <Popup x:Name="_popupSliderTooltip" AllowsTransparency="True"
                            Placement="Relative"  PlacementTarget="{Binding ElementName=_position}">
                            <Border Name="_borderSliderTooltip" CornerRadius="4"
                                BorderBrush="Black" BorderThickness="0" Padding="3,1">
                                <Border.Background>
                                    <SolidColorBrush Color="Black" Opacity="0.5" />
                                </Border.Background>
                                <TextBlock x:Name="_txtSliderTooltip" Text="00:00" 
                                   FontSize="14" FontWeight="Medium"
                                   Foreground="White"/>
                            </Border>
                        </Popup>
                        <Slider x:Name="_volume" Margin="2,10" Width="60" MinWidth="60" 
                                DockPanel.Dock="Right"
                                Value="150" Maximum="1000" Minimum="0" IsMoveToPointEnabled="True"
                                ValueChanged="Volume_ValueChanged" >
                            <Slider.ToolTip>
                                <TextBlock Text="{Binding Volume, StringFormat=Volume: 0.#%, FallbackValue='Volume: 12%'}" />
                            </Slider.ToolTip>
                        </Slider>
                        <Grid Margin="2,4">
                            <Canvas Background="Transparent">
                                <Canvas.Resources>
                                    <Style TargetType="Line">
                                        <Setter Property="Stroke" Value="AliceBlue" />
                                        <Setter Property="StrokeThickness" Value="3" />
                                    </Style>
                                </Canvas.Resources>

                                <Line x:Name="_lineA" X1="20" X2="20" Y1="3" Y2="16" />
                                <Line x:Name="_lineB" X1="40" X2="40" Y1="3" Y2="16" />

                                <Line x:Name="_lineC" X1="60" X2="60" Y1="3" Y2="16" />
                                <Line x:Name="_lineD" X1="61" X2="61" Y1="3" Y2="16" />
                                <Line x:Name="_lineE" X1="62" X2="62" Y1="3" Y2="16" />
                                <Line x:Name="_lineF" X1="63" X2="63" Y1="3" Y2="16" />
                                <Line x:Name="_lineG" X1="64" X2="64" Y1="3" Y2="16" />
                                <Line x:Name="_lineH" X1="65" X2="65" Y1="3" Y2="16" />
                                <Line x:Name="_lineI" X1="66" X2="66" Y1="3" Y2="16" />
                                <Line x:Name="_lineJ" X1="67" X2="67" Y1="3" Y2="16" />
                                <Line x:Name="_lineK" X1="68" X2="68" Y1="3" Y2="16" />
                            </Canvas>
                            <Slider x:Name="_position"
                                    Value="33" Maximum="300" Minimum="0" TickFrequency="60" TickPlacement="TopLeft" 
                                    SmallChange="10" LargeChange="60"
                                    IsMoveToPointEnabled="True" 
                                    ValueChanged="Pos_ValueChanged"
                                    Thumb.DragStarted="Pos_DragStarted"
                                    Thumb.DragCompleted="Pos_DragCompleted"
                                    MouseMove="Pos_MouseMove" 
                                    MouseLeave="Pos_MouseLeave" />
                        </Grid>
                    </DockPanel>
                </DockPanel>
            </WrapPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
